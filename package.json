{
  "name": "~dumili",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0 <19.0.0"
  },
  "scripts": {
    "dumili": "concurrently -p \"[dumili-{name}]\" --kill-others-on-fail -n front,api,dm,kumiko,paddleocr \"pnpm -F ~dumili dev\" \"pnpm -F ~dumili-api dev\" \"pnpm -F ~web web\" \"docker compose -f docker-compose-dev.yml up kumiko\" \"docker compose -f docker-compose-dev.yml up paddleocr\"",
    "dev": "concurrently -n vite,vue-tsc \"vite --port 8004\" \"vue-tsc --noEmit --watch\"",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint --cache --fix ."
  },
  "dependencies": {
    "@cloudinary/url-gen": "^1.16.1",
    "@cloudinary/vue": "^1.12.0",
    "@uppy/core": "^3.8.0",
    "@uppy/dashboard": "^3.7.1",
    "@uppy/drag-drop": "^3.0.3",
    "@uppy/file-input": "^3.0.4",
    "@uppy/progress-bar": "^3.0.4",
    "@uppy/xhr-upload": "^3.6.0",
    "@vueuse/integrations": "^10.7.2",
    "async-validator": "^4.2.5",
    "bootstrap": "^5.3.2",
    "bootstrap-vue-next": "^0.15.5",
    "dayjs": "^1.11.10",
    "js-cookie": "^3.0.5",
    "page-flip": "^2.0.7",
    "pinia": "^2.1.7",
    "vue": "^3.4.18",
    "vue-i18n": "^9.9.1",
    "vue-router": "^4.2.5",
    "vue-slicksort": "^2.0.5",
    "~dumili-api": "workspace:*",
    "~socket.io-client-services": "workspace:*",
    "~socket.io-services": "workspace:*",
    "~web": "workspace:*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.2.1",
    "@iconify-json/bi": "^1.1.23",
    "@intlify/unplugin-vue-i18n": "^1.6.0",
    "@types/js-cookie": "^3.0.6",
    "@types/page-flip": "^2.0.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-prettier-vue": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.21.1",
    "prettier": "^2.8.8",
    "sass": "^1.70.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.1",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-pages": "^0.32.0",
    "vue-tsc": "^1.8.27"
  },
  "eslintConfig": {
    "extends": "@antfu"
  }
}